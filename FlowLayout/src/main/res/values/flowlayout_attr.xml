<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FlowLayout">
        <attr name="bothGap" format="dimension"></attr>
        <attr name="vGap" format="dimension"></attr>
        <attr name="hGap" format="dimension"></attr>

        <attr name="gravity" format="enum">
            <enum name="left" value="0"></enum>
            <enum name="center" value="1"></enum>
            <enum name="right" value="2"></enum>
            <enum name="leftRightAlign" value="3"></enum>
            <enum name="leftRightAlignIgnoreLastLine" value="4"></enum>
        </attr>
        <attr name="gravity_vertical" format="enum">
            <enum name="top" value="0"></enum>
            <enum name="center" value="1"></enum>
            <enum name="bottom" value="2"></enum>
        </attr>
        <attr name="maxNum" format="integer"></attr>
        <attr name="maxLine" format="integer"></attr>
    </declare-styleable>

    <declare-styleable name="FlowLayout_Layout">
        <attr name="layout_new_line" format="boolean"/>
    </declare-styleable>
</resources>